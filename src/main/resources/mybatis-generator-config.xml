            <!-- 是否使用bigDecimal， false可自动转化以下类型（Long, Integer, Short, etc.） -->
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaClientGenerator targetPackage="com.hai.dao" targetProject="D:/Workspaces/IdeaProjects/ssm/src/main/java" type="ANNOTATEDMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table schema="Person" tableName="person"/>
        <table schema="Employee" tableName="employee"/>
    </context>
